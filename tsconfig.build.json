{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "noEmitOnError": false,
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true,

    "removeComments": false,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "verbatimModuleSyntax": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
